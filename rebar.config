{erl_opts, [
    debug_info,
    {i, "include"},
    {node, 'heartbeat@127.0.0.1'},
    {setcookie, heartbeat_cookie},
    {parse_transform, lager_transform}
]}.
{deps, [
    {lager, "~> 3.9"},
    {cowboy, "~> 2.12.0"},
    {jsx, "~> 3.0"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [heartbeat]}
]}.

{relx, [
  {release, {heartbeat, "0.1.0"},
    [heartbeat, sasl]},
  {dev_mode, true},
  {include_erts, false}
]}.
